    <inherits name='annotation' />
    <inherits name="toml"/>
    <inherits name='artemis-addon' />
    <extend-configuration-property name="artemis.reflect.include" value="net.mostlyoriginal.api" />

    <extend-configuration-property name="artemis.reflect.include" value="com.artemis" />
    <extend-configuration-property name="artemis.reflect.include" value="com.rockbite.cards.cards.drops" />

    <extend-configuration-property name="artemis.reflect.include" value="com.rockbite.bongo.engine.systems" />
