    <extend-configuration-property name="artemis.reflect.include" value="com.rockbite.bongo.engine.gltf" />
    <extend-configuration-property name="artemis.reflect.include" value="com.rockbite.bongo.engine.gltf.scene" />

    <extend-configuration-property name="artemis.reflect.include" value="com.rockbite.tween" />



    <extend-configuration-property name="gdx.reflect.include" value="com.artemis" />
    <extend-configuration-property name="gdx.reflect.include" value="com.badlogic.gdx.InputProcessor" />
